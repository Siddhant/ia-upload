{
	"name": "wikisource/ia-upload",
	"description": "Bot to upload Internet Archive files to Wikimedia Commons",
	"license": "GPL-2.0+",
	"homepage": "https://wikitech.wikimedia.org/wiki/Tool:IA_Upload",
	"minimum-stability": "stable",
	"require": {
		"php": ">=5.5",
		"guzzlehttp/guzzle": "~6.0",
		"guzzlehttp/oauth-subscriber": "~0.3",
		"silex/silex": "~2.0",
		"symfony/twig-bridge": "~3.1",
		"addwiki/mediawiki-api-base": "~2.2",
		"firebase/php-jwt": "~4.0",
		"monolog/monolog": "~1.20",
		"symfony/console": "^3.2",
		"pastuhov/php-exec-command": "^1.1"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "~0.7"
	},
	"autoload": {
		"psr-0": {
			"IaUpload\\": "src/"
		}
	},
	"scripts": {
		"test": [
			"phpcs"
		],
		"configini": [
			"php -r \"file_exists('config.ini') || copy('config_example.ini', 'config.ini');\""
		],
		"post-install-cmd": [
			"composer configini"
		],
		"post-update-cmd": [
			"composer configini"
		]
	}
}
